<style>
    .product-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }
    .product-item {
        background-color: white;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .product-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
    .product-item img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        margin-bottom: 15px;
    }
    .product-item .item_name {
        font-family: 'Arvo', serif;
        font-size: 20px;
        margin-bottom: 10px;
    }
    .product-item .item_desc {
        font-family: sans-serif;
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
        flex-grow: 1;
    }
    .product-item .button {
        background-color: #e3ca96;
        color: white;
        text-decoration: none;
        padding: 12px 24px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-family: 'Arvo', serif;
        font-size: 16px;
        transition: background-color 0.3s;
    }
    .product-item .button:hover {
        background-color: #d1b886;
    }
</style>

<div class="subheader" style="background-image: url(/Resources/home_burger_subheader.jpg);">
      <p class="text1" style="color:#eee3df; font-size: 60px; margin-top: 150px;">Shop</p>
    </div>
<div class="" style="background-color: whitesmoke; padding: 40px 20px;">
  <h1 class="text1" style="font-size: 42px; margin-bottom: 30px; font-family: 'Arvo', serif; text-align: center;">Our Delicious Products</h1>

  <div class="container2" style="padding-bottom: 100px;">
    <div class="product-grid">
      <% products.forEach(product => { %>
        <div class="product-item">
          <% if (product.image) { %>
            <img src="/images/uploaded/<%= product.image %>" alt="<%= product.name %>">
          <% } else { %>
            <div style="width: 100%; height: 200px; background-color: #f0f0f0; display:flex; align-items:center; justify-content:center; margin-bottom: 15px;"><p>No Image</p></div>
          <% } %>
          <p class="item_name">
            <%= product.name %> <span class="theme_color" style="color: #e3ca96;">$<%= product.price %></span>
          </p>
          <p class="item_desc">
            <%= product.description %>
          </p>
          <form action="/cart/add" method="post">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <button type="submit" class="button cart-button">Add to Cart</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</div>


<div class="" style="background-color: whitesmoke; padding: 20px;">
  <h1 class="text1" style="font-size: 36px; margin-bottom: 20px; font-family: 'Arvo', serif;">Edit Product</h1>

  <form action="/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #311c0f; font-family: 'Arvo', serif;">Product Name</label>
      <input type="text" name="name" value="<%= product.name %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" required>
    </div>

    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #311c0f; font-family: 'Arvo', serif;">Price</label>
      <input type="text" name="price" value="<%= product.price %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" required>
    </div>

    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #311c0f; font-family: 'Arvo', serif;">Type</label>
      <input type="text" name="type" value="<%= product.type %>" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #311c0f; font-family: 'Arvo', serif;">Description</label>
      <textarea name="description" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" rows="3"><%= product.description %></textarea>
    </div>

    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #311c0f; font-family: 'Arvo', serif;">Current Image</label><br>
      <% if (product.image) { %>
        <img src="/images/uploaded/<%= product.image %>" alt="Product Image" width="100" style="margin-bottom: 10px;">
      <% } else { %>
        <p>No image uploaded.</p>
      <% } %>
    </div>

    <div style="margin-bottom: 15px;">
      <label style="display: block; margin-bottom: 5px; color: #311c0f; font-family: 'Arvo', serif;">Change Image</label>
      <input type="file" name="image" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" accept="image/*">
    </div>

    <button type="submit" class="button" style="background-color: #e3ca96; color: white; text-decoration: none; border: none; padding: 15px 20px; margin-right: 10px; border-radius: 5px;">Update Product</button>
    <a href="/Burgers/products" class="button" style="background-color: #311c0f; color: white; text-decoration: none; border: none; padding: 15px 20px; border-radius: 5px;">Cancel</a>
  </form>
</div>